<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/windowBackground"
    android:tag="smsmsm"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/windowBackground"
        android:orientation="vertical">

        <include layout="@layout/savemasterdown_video_pl_detail" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- CONTENT -->
            <RelativeLayout
                android:id="@+id/detail_content_root_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/windowBackground">

                <!-- Banner Ad -->
                <include
                    layout="@layout/savemasterdown_3banner"
                    android:visibility="gone" />

                <!-- TITLE -->
                <RelativeLayout
                    android:id="@+id/detail_title_root_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adView"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/detail_video_title_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/detail_toggle_description_view"
                        android:ellipsize="end"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded"
                        tools:text="@string/example_video_title" />

                    <ImageView
                        android:id="@+id/detail_toggle_description_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="top|end"
                        android:src="@drawable/savemasterdown_ic_arrow_down" />

                    <TextView
                        android:id="@+id/detail_view_count_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_video_title_view"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="4dp"
                        android:lines="1"
                        tools:text="6,821,505 views" />

                </RelativeLayout>

                <!-- LOADING INDICATOR-->
                <ProgressBar
                    android:id="@+id/loading_progress_bar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_title_root_layout"
                    android:layout_marginTop="@dimen/video_item_detail_error_panel_margin"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/savemasterdown_app_primary_color"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!--ERROR PANEL-->
                <include
                    android:id="@+id/error_panel"
                    layout="@layout/savemasterdown_error_retry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_title_root_layout"
                    android:layout_marginTop="@dimen/video_item_detail_error_panel_margin"
                    android:visibility="gone" />

                <!--HIDING ROOT-->
                <LinearLayout
                    android:id="@+id/detail_content_root_hiding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/detail_title_root_layout"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <!--CONTROLS-->
                    <LinearLayout
                        android:id="@+id/detail_control_panel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/detail_controls_popup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="@string/savemasterdown_controls_popup_title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            app:drawableTopCompat="?attr/savemasterdown_popup" />

                        <TextView
                            android:id="@+id/detail_controls_download"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:drawableTop="?attr/savemasterdown_download"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="@string/download"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                        <TextView
                            android:id="@+id/detail_controls_playlist_append"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="@string/savemasterdown_controls_add_paylist"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            app:drawableTopCompat="?attr/ic_playlist_add" />

                    </LinearLayout>

                    <!--CHANNEL-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/savemasterdown_separator_color" />

                    <RelativeLayout
                        android:id="@+id/channel_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false">

                        <!--UPLOADER-->
                        <LinearLayout
                            android:id="@+id/detail_uploader_root_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_toStartOf="@+id/channel_subscribe_button"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/detail_uploader_thumbnail_view"
                                android:layout_width="@dimen/savemasterdown_video_item_detail_uploader_image_size"
                                android:layout_height="@dimen/savemasterdown_video_item_detail_uploader_image_size"
                                android:src="@drawable/savemasterdown_u_default"
                                app:civ_border_color="@color/savemasterdown_app_primary_color"
                                app:civ_border_width="1dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/detail_uploader_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:ellipsize="marquee"
                                    android:fadingEdge="horizontal"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    tools:text="@string/example_channel_title" />

                                <TextView
                                    android:id="@+id/detail_uploader_subscriber_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:maxLines="1"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    tools:text="688K subscribers" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Subscribe channel -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/channel_subscribe_button"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/savemasterdown_subscribe_button_title"
                            android:textAllCaps="true"
                            android:textSize="@dimen/channel_rss_title_size"
                            android:visibility="gone"
                            app:backgroundTint="@color/savemasterdown_app_primary_color"
                            app:icon="@drawable/savemasterdown_ic_subscriptions_white_24dp"
                            app:iconGravity="end"
                            app:iconPadding="4dp"
                            app:iconSize="18dp"
                            app:iconTint="@color/savemasterdown_white"
                            app:rippleColor="#52D50000"
                            tools:ignore="RelativeOverlap"
                            tools:visibility="visible" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/savemasterdown_separator_color" />

                    <!--DESCRIPTIONS-->
                    <LinearLayout
                        android:id="@+id/detail_description_root_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/detail_upload_date_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="10dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="@dimen/video_item_detail_upload_date_text_size"
                            android:textStyle="bold"
                            tools:text="Published on Jan 1, 2019" />

                        <TextView
                            android:id="@+id/detail_description_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/video_item_detail_description_text_size"
                            tools:text="Description..." />

                    </LinearLayout>

                    <!--RELATED VIDEOS-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/detail_next_stream_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:gravity="center_vertical"
                                android:text="@string/savemasterdown_next_video_title"
                                android:textColor="?attr/colorSubtitle"
                                android:textSize="@dimen/video_item_detail_next_text_size"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switch_auto_play"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:checked="true"
                                android:gravity="center_vertical"
                                android:text="@string/savemasterdown_autoplay"
                                android:textColor="?attr/colorSubtitle"
                                android:textSize="14sp"
                                android:theme="@style/SwitchTheme"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:switchPadding="8dp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- NativeAd -->
                        <FrameLayout
                            android:id="@+id/template_view"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_marginTop="6dp"
                            app:native_ad_type="@layout/savemasterdown_native_ad_medium" />

                        <LinearLayout
                            android:id="@+id/detail_related_streams_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <include layout="@layout/savemasterdown_detail_ol_layout" />

</FrameLayout>