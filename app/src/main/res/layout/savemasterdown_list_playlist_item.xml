<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemRoot"
    android:layout_width="match_parent"
    android:tag="smsmsm"
    android:layout_height="@dimen/video_item_search_height"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="16dp"
    android:paddingTop="@dimen/savemasterdown_video_item_search_padding"
    android:paddingEnd="8dp"
    android:paddingBottom="@dimen/savemasterdown_video_item_search_padding"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/itemThumbnailView"
        android:layout_width="@dimen/savemasterdown_video_item_search_thumbnail_image_width"
        android:layout_height="@dimen/savemasterdown_video_item_search_thumbnail_image_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/savemasterdown_video_item_search_image_right_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/savemasterdown_n_img" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/itemThumbnailView"
        android:layout_alignTop="@id/itemThumbnailView"
        android:layout_alignBottom="@id/itemThumbnailView"
        android:background="@color/savemasterdown_duration_background_color"
        android:gravity="center"
        android:padding="8dp"
        android:src="@drawable/savemasterdown_ic_playlist_play_white_24dp"/>

    <TextView
        android:id="@+id/itemTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_action"
        android:layout_toEndOf="@+id/itemThumbnailView"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingEnd="4dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/savemasterdown_video_item_title_text_size"/>

    <TextView
        android:id="@+id/itemUploaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemTitleView"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/btn_action"
        android:layout_toEndOf="@+id/itemThumbnailView"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/savemasterdown_video_item_uploader_text_size"/>

    <TextView
        android:id="@+id/itemStreamCountView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemUploaderView"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/btn_action"
        android:layout_toEndOf="@+id/itemThumbnailView"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/savemasterdown_video_item_uploader_text_size"/>

    <ImageButton
        android:id="@+id/btn_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="?attr/options"/>

</RelativeLayout>