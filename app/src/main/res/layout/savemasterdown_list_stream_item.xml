<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemRoot"
    android:layout_width="match_parent"
    android:tag="smsmsm"
    android:layout_height="@dimen/video_item_search_height"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="@dimen/savemasterdown_video_item_search_image_right_margin"
    android:paddingTop="@dimen/savemasterdown_video_item_search_padding"
    android:paddingEnd="6dp"
    android:paddingBottom="@dimen/savemasterdown_video_item_search_padding"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/itemThumbnailView"
        android:layout_width="@dimen/savemasterdown_video_item_search_thumbnail_image_width"
        android:layout_height="@dimen/savemasterdown_video_item_search_thumbnail_image_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/savemasterdown_video_item_search_image_right_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/savemasterdown_n_img" />

    <TextView
        android:id="@+id/itemDurationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/itemThumbnailView"
        android:layout_alignBottom="@id/itemThumbnailView"
        android:layout_marginEnd="@dimen/video_item_search_duration_margin"
        android:layout_marginBottom="@dimen/video_item_search_duration_margin"
        android:background="@drawable/savemasterdown_duration_bg"
        android:paddingLeft="@dimen/video_item_search_duration_horizontal_padding"
        android:paddingTop="@dimen/video_item_search_duration_vertical_padding"
        android:paddingRight="@dimen/video_item_search_duration_horizontal_padding"
        android:paddingBottom="@dimen/video_item_search_duration_vertical_padding"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/savemasterdown_duration_text_color"
        android:textSize="@dimen/savemasterdown_video_item_duration_text_size"/>

    <TextView
        android:id="@+id/itemVideoTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_action"
        android:layout_toEndOf="@+id/itemThumbnailView"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/savemasterdown_video_item_title_text_size" />

    <TextView
        android:id="@+id/itemUploaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemVideoTitleView"
        android:layout_toStartOf="@+id/btn_action"
        android:layout_toEndOf="@+id/itemThumbnailView"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/savemasterdown_video_item_uploader_text_size" />

    <TextView
        android:id="@+id/itemAdditionalDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btn_action"
        android:layout_toEndOf="@+id/itemThumbnailView"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/savemasterdown_video_item_upload_date_text_size" />

    <ImageButton
        android:id="@+id/btn_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="?attr/options" />

</RelativeLayout>