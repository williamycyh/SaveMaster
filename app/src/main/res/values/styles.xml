        <item name="android:windowBackground">@color/savemasterdown_dark_dialog_background_color</item>
        <item name="windowBackground">@color/savemasterdown_dark_dialog_background_color</item>
    </style>

    <!-- Settings -->
    <style name="LightSettingsTheme" parent="LightTheme">
        <item name="colorAccent">@color/savemasterdown_light_settings_accent_color</item>
    </style>

    <style name="DarkSettingsTheme" parent="DarkTheme">
        <item name="colorAccent">@color/savemasterdown_white</item>
    </style>

    <style name="Toolbar.Title" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/savemasterdown_white</item>
        <item name="subtitleTextColor">@color/savemasterdown_white</item>
    </style>

    <style name="mPopupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">-6dp</item>
        <item name="android:dropDownVerticalOffset">6dp</item>
    </style>

    <style name="SeekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/savemasterdown_app_primary_color</item>
        <item name="colorControlNormal">@color/savemasterdown_app_second_color</item>
    </style>

    <style name="SeekBarThemeWhite" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/savemasterdown_white</item>
        <item name="colorControlNormal">@color/savemasterdown_light_gray</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/savemasterdown_bg_bottom_sheet_dialog</item>
    </style>

    <style name="DarkBottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="colorAccent">@color/dark_app_accent_color</item>
    </style>

    <style name="LightBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="colorAccent">@color/dark_app_accent_color</item>
