    <style name="RadioButtonTheme" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="colorControlActivated">@color/savemasterdown_app_primary_color</item>
        <item name="colorControlNormal">#747474</item>
    </style>

    <style name="ProgressBarTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="android:colorAccent">@color/savemasterdown_app_primary_color</item>
