        <item name="windowBackground">@color/savemasterdown_light_dialog_background_color</item>
    </style>

    <style name="DarkDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/light_app_primary_color</item>
        <item name="colorPrimaryDark">@color/light_app_dark_color</item>
