    <style name="RatingBarTheme" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/savemasterdown_dark</item>
        <item name="colorControlActivated">@color/savemasterdown_app_primary_color</item>
    </style>

    <style name="App.TextAppearance.Design.Tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
