<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">

        <shape>
            <solid android:color="@color/savemasterdown_app_primary_color"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/savemasterdown_app_primary_color"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/savemasterdown_dark"/>
        </shape>
    </item>
    
</selector>